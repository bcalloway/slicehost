server {
    listen 80;
    server_name <%= domain %>;
    
    root <%= current_path %>/public;
    
    client_max_body_size 10m;
    client_body_buffer_size 128k;
    
    access_log <%= nginx_path %>/logs/<%= domain %>.access.log;
    error_log <%= nginx_path %>/logs/<%= domain %>.error.log;
        
    
    passenger_enabled on;
}